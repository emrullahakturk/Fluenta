<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_gravity="center"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Phrase (Phrase) ve Seviye (Level) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPhrase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A piece of cake"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/app_blue" />

            <TextView
                android:id="@+id/tvLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A2"
                android:textSize="14sp"
                android:padding="4dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/app_blue"
                android:layout_marginEnd="4dp" />
        </RelativeLayout>

        <!-- Anlam (Meaning) -->
        <TextView
            android:id="@+id/tvMeaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Çok kolay bir şey."
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black" />

        <!-- İngilizce Örnek (enExample) -->
        <TextView
            android:id="@+id/tvEnExample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This task is a piece of cake."
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-italic"
            android:textColor="@android:color/darker_gray" />

        <!-- Türkçe Örnek (trExample) -->
        <TextView
            android:id="@+id/tvTrExample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bu görev çok kolay."
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black" />

        <!-- Lottie Animation (Optional) -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/diceLottie"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_repeatMode="restart"
            app:lottie_rawRes="@raw/dice_lottie" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
