<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
android:padding="16dp">

<TextView
    android:id="@+id/tvFavoritesTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Favoriler"
    android:textSize="22sp"
    android:textColor="@color/black"
    android:textStyle="bold"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp" />

<!-- Oxford Favoriler -->
<Button
    android:id="@+id/btnOxford"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Oxford 3000 Favoriler"
    android:backgroundTint="@color/app_blue"
    android:textColor="@color/white"
    android:layout_marginTop="24dp"
    app:layout_constraintTop_toBottomOf="@id/tvFavoritesTitle"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

<!-- C1 C2 Favoriler -->
<Button
    android:id="@+id/btnC1C2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Common C1-C2 Favoriler"
    android:backgroundTint="@color/app_blue"
    android:textColor="@color/white"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@id/btnOxford"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

<!-- Phrases Favoriler -->
<Button
    android:id="@+id/btnPhrases"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="En Çok Kullanılan İfadeler"
    android:backgroundTint="@color/app_blue"
    android:textColor="@color/white"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@id/btnC1C2"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
